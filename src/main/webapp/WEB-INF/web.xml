<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <!-- 主页 -->
  <servlet>
    <servlet-name>index</servlet-name>
    <servlet-class>com.ming.controller.Index</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>index</servlet-name>
    <url-pattern>/index.jsp</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>list</servlet-name>
    <servlet-class>com.ming.controller.ListController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>list</servlet-name>
    <url-pattern>/list.html</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>change</servlet-name>
    <servlet-class>com.ming.controller.change</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>change</servlet-name>
    <url-pattern>/change.html</url-pattern>
  </servlet-mapping>
</web-app>
